{
    "name": "@basenjs/base",
    "version": "0.0.2",
    "private": false,
    "description": "A base library for Node.js projects.",
    "type": "module",
    "main": "dist/cjs/index.cjs",
    "module": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": {
                "types": "./dist/cjs/index.cjs",
                "default": "./dist/cjs/index.cjs"
            },
            "import": "./dist/esm/index.mjs",
            "types": "./dist/types/index.d.ts"
        }
    },
    "keywords": [],
    "author": {
        "name": "g-greene"
    },
    "scripts": {
        "build": "rollup -c && npm run build:types",
        "build:types": "tsc -p tsconfig.declarations.json",
        "release": "npm run build && npm version patch && npm publish && git push --follow-tags",
        "release:minor": "npm run build && npm version minor && npm publish && git push --follow-tags",
        "release:major": "npm run build && npm version major && npm publish && git push --follow-tags"
    },
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "^22.19.2",
        "prettier": "^3.5.3",
        "rollup": "^4.40.0",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "node": "^20.19.6"
    }
}
